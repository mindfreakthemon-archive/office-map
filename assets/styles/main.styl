* {
	margin: 0;
	padding: 0;
}

body {
	background: #eee;
	padding-top: 70px;
}

#map {
  position absolute;
  left 0;
  top: 0;
  width: 100vw;
  height: 100vh;
	background: #fff;
}

.bold {
	font-weight: bold;
	font-size: 1.1em;
}

.action {
	cursor: pointer;
}

admin,
toolbar,
worker-item,
admin-tools {
	display: block;
}

admin {
	margin-top: 50px;
}

.pagination {
	a {
		cursor: pointer;
	}

	.current {
		display: none;
	}
}

.map-admin-header,
.map-header {
	position: absolute;
	top: 70px;
	left: 10px;
	z-index: 1000;


	font-size: 2em;
	border: 1px solid #000;
	background: #fff;
	padding: 0 20px;
}

.map-admin-header {
	top: 120px;
}

tabs {
	display: block;
	margin-top: 20px;

	.nav-tabs {
		margin-bottom: 10px;
	}
}

.media {
	display: block;
	margin-top: 20px;
}

.leaflet-container {
  a {
	color: white;
  }
}